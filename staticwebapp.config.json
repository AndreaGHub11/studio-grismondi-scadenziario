{
  "routes": [
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif}", "/css/*"]
  },
  "responseOverrides": {
    "404": {
      "serve": "/index.html",
      "statusCode": 200
    }
  },
  "mimeTypes": {
    ".html": "text/html",
    ".css": "text/css",
    ".js": "application/javascript",
    ".json": "application/json"
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "Content-Security-Policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval' *.sharepoint.com *.office.com *.microsoft.com *.microsoftonline.com; img-src 'self' data: *.sharepoint.com; connect-src 'self' *.sharepoint.com *.office.com *.microsoft.com *.microsoftonline.com"
  }
}
